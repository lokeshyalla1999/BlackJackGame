@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System;
@using System.Threading;
@{
    ViewData["Title"] = "GameView";
    
}
<div>
<div>
      @if (@ViewBag.Display == false){
  <a asp-action="Hit" asp-route-id="1"><button class="btn btn-warning"style="float:left"> Hit </button></a>
  
  
   <a asp-action="Stay" asp-route-id="1"><button class="btn btn-success"style="float:left"> Stay</button></a>
      }
</div>
<div>
<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>CardNo :</th>
      <th>Player :</th>
      <th>Dealer :</th>
    </tr>
  </thead>
  <tbody>
      <tr>
          <td>1</td>
          <td>@ViewBag.HandCard</td>
         <td>@ViewBag.Dealercard</td>
      </tr>
       <tr>
          <td>2</td>
          <td>@ViewBag.HandCard1</td>
         <td>@ViewBag.Dealercard1</td>      
      </tr>
       <tr>      
          <td>3</td>
         <td>@ViewBag.HandCard2</td>
         <td>@ViewBag.Dealercard2</td>
      </tr>
       <tr>      
          <td>4</td>
         <td>@ViewBag.HandCard3</td>
         <td>@ViewBag.Dealercard3</td>
      </tr>
  </tbody>
  </table>
  </div>
  
  <h3> Player Total : @ViewBag.playerScore </h3>
  <h3> Dealer Total : @ViewBag.DealerScore</h3>
    @if (@ViewBag.Display == true)
    {
        <h3> Game State   : @ViewBag.winner </h3>
    }

  <br />

    <a asp-action="Result"><button class="btn btn-outline-primary " style="float:right"> View Session Report </button></a>

        @if (@ViewBag.Display == true)        
        {
      <a href="/"><button class="btn btn-primary"  style="float:right">Play Again</button></a>
        }

  </div>


